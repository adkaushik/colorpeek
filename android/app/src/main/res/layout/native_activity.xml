<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@android:color/black"
    android:backgroundTint="@android:color/black"
    android:padding="40dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NativeActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button2"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/matisse"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/buttonColor"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corners"
        android:text="Send info to React Native"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/matisse"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/buttonColor"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corners"
        android:text="Open Camera - Coming soon"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/matisse"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/button"
        android:layout_marginBottom="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/buttonColor"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corners"
        android:text="Choose from gallery"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="@color/buttonColor"
        android:layout_width="match_parent"
        android:background="@drawable/rounded_corners"
        android:text="Go back to React native"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:textColor="@android:color/black"
        android:layout_height="wrap_content" />

</androidx.constraintlayout.widget.ConstraintLayout>